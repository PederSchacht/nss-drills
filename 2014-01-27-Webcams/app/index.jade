doctype html
//[if IE 9]><html class="lt-ie10" lang="en" > <![endif]
html(class='no-js', lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Webcams
    link(rel='stylesheet', href='/css/normalize.css')
    link(rel='stylesheet', href='/css/foundation.css')
    link(rel='stylesheet', href='/css/app.css')
    script(src='/js/vendor/modernizr.js')
  body
    .row
      .small-12.columns
        .panel
          h1 Traffic Webcams
    .row
      .small-4.columns
        .row
          .small-6.columns
            input#zipinput(type="text", placeholder="Zip Code", autofocus=true)
            .row
              .small-12.columns
                select#zipselect
          .small-6.columns
            button.tiny.radius#addzip Add Zip Code
            .row
              .small-12.columns
                button.tiny.radius#getwebcams Get Webcams
            .row
              .small-12.columns
                button.tiny.radius#clear Clear
    .row
      .small-8.columns
        #container

    script(src='/js/vendor/jquery.js')
    script(src='/js/vendor/foundation.js')
    script(src='/js/source/main.js')
    script $(document).foundation();

